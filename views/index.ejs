<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Inventory</title>
</head>
<body>
    <header>
        <h1>Book Inventory</h1>
        <nav>
            <ul>
                <li><a href="">Genres</a></li>
                <li><a href="">Authors</a></li>
                <li><a href="">Books</a></li>
            </ul>
        </nav>
    </header>
    <table>
        <th>Title</th>
        <th>Price</th>
        <th>No. Of Pages</th>
        <th>Author</th>
        <th>Genre</th>
    <% allBooks.forEach((book) => { %>
        <%const title = book.book_name;%>
        <%const price = book.book_price;%>
        <%const noOfPages = book.no_of_pages;%>
        <%const authorName = book.author_name;%>
        <%const genre = book.genre_name;%>
            <%- include('./partials/book', { title: title, price: price, noOfPages: noOfPages, authorName: authorName, genre: genre}) %>
    <%}) %>
    </table>
    
</body>
</html>